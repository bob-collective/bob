{
  "name": "BOB-docs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "docusaurus": "docusaurus",
    "install:sdk": "cd ../sdk && yarn install",
    "typedoc:sdk": "npx typedoc --tsconfig ../sdk/tsconfig.json --out docs/api/ts-sdk ../sdk/src/*",
    "start": "yarn typedoc:sdk && docusaurus start",
    "build:docs": "yarn typedoc:sdk && docusaurus build",
    "build": "yarn install:sdk && yarn build:docs",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@docusaurus/core": "^3.2.1",
    "@docusaurus/preset-classic": "^3.2.1",
    "@docusaurus/theme-live-codeblock": "^3.2.1",
    "@docusaurus/theme-mermaid": "^3.2.1",
    "@easyops-cn/docusaurus-search-local": "^0.36.0",
    "@mdx-js/react": "^3.0.1",
    "@scure/base": "^1.1.7",
    "@scure/btc-signer": "^1.3.2",
    "bitcoin-address-validation": "^2.2.3",
    "clsx": "^2.0.0",
    "prism-react-renderer": "^2.3.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "3.2.1",
    "@docusaurus/types": "3.2.1",
    "@tsconfig/docusaurus": "^2.0.0",
    "typedoc": "^0.25.13",
    "typedoc-plugin-markdown": "^3.16.0",
    "typescript": "^5.1.6"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.14"
  }
}
