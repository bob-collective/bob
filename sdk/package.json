{
    "name": "@gobob/bob-sdk",
    "version": "5.0.3",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "test": "vitest run test/*.ts",
        "deploy-relay": "ts-node src/scripts/relay-genesis.ts",
        "update-relay": "ts-node src/scripts/relay-retarget.ts",
        "build": "tsc -p tsconfig.json",
        "lint": "eslint .",
        "format": "prettier --write examples src test",
        "format:check": "prettier --check examples src test",
        "codegen": "npx @openapitools/openapi-generator-cli generate --skip-validate-spec -g typescript-fetch -i https://gateway-api-mainnet.gobob.xyz/api-doc.json -o ./src/gateway/generated-client --global-property=apiDocs=false,modelDocs=false"
    },
    "files": [
        "dist/**/*",
        "!**/*.spec.*",
        "CHANGELOG.md",
        "LICENSE",
        "README.md"
    ],
    "devDependencies": {
        "@gobob/tokenlist": "file:../tokenlist",
        "@scure/bip32": "^2.0.1",
        "@types/node": "^24.3.0",
        "@types/yargs": "^17.0.35",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.49.0",
        "ecpair": "^2.1.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.5",
        "eslint": "^10.0.0",
        "mocha": "^11.7.5",
        "nock": "^14.0.10",
        "prettier": "^3.6.2",
        "tiny-secp256k1": "^2.2.4",
        "ts-node": "^10.0.0",
        "tsx": "^4.20.6",
        "typescript": "^5.7.3",
        "vitest": "^3.2.4",
        "yargs": "^18.0.0"
    },
    "dependencies": {
        "@bitcoinerlab/secp256k1": "^1.2.0",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.39.2",
        "@gobob/sats-wagmi": "^0.3.23",
        "@magiceden-oss/runestone-lib": "^1.0.2",
        "@scure/base": "^1.2.4",
        "@scure/btc-signer": "^1.6.0",
        "bip39": "^3.1.0",
        "bitcoin-address-validation": "^3.0.0",
        "bitcoinjs-lib": "^6.1.7",
        "global": "^4.4.0",
        "viem": "^2.33.2"
    }
}